        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/reset_network_desc" android:textDirection="locale"/>
            <include layout="@layout/reset_esim_checkbox"/>
        </LinearLayout>
