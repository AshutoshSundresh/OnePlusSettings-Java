    <Spinner android:layout_gravity="center_horizontal" android:id="@+id/reset_network_subscription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
    <Button android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/initiate_reset_network" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="12dp" android:text="@string/reset_network_button_text"/>
</LinearLayout>
