<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/onboarding_fragment_root" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/background_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/main_icon" style="?attr/onboardingMainIconStyle"/>
    <LinearLayout android:id="@+id/page_container" android:visibility="gone" style="?attr/onboardingHeaderStyle">
        <TextView android:id="@+id/title" style="?attr/onboardingTitleStyle"/>
        <TextView android:id="@+id/description" style="?attr/onboardingDescriptionStyle"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/content_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/navigator_container" android:layout_below="@+id/page_container" android:layout_centerHorizontal="true"/>
    <FrameLayout android:id="@+id/navigator_container" style="?attr/onboardingNavigatorContainerStyle">
        <androidx.leanback.widget.PagingIndicator android:id="@+id/page_indicator" android:visibility="gone" style="?attr/onboardingPageIndicatorStyle"/>
        <Button android:id="@+id/button_start" android:visibility="gone" style="?attr/onboardingStartButtonStyle"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/foreground_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/logo" style="?attr/onboardingLogoStyle"/>
</RelativeLayout>
