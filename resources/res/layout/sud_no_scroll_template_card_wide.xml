<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.setupdesign.view.Illustration android:id="@+id/sud_layout_decor" android:background="@drawable/sud_layout_background" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:gravity="top|left|center_vertical|center_horizontal|center|start" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="16">
            <TextView android:id="@+id/suc_layout_title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sud_card_land_header_text_margin_top" android:layout_weight="6" style="@style/SudCardTitle"/>
            <FrameLayout android:background="?attr/sudCardBackground" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="8" android:elevation="@dimen/sud_card_elevation">
                <FrameLayout android:id="@+id/sud_layout_content" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <include layout="@layout/sud_progress_bar_stub"/>
            </FrameLayout>
        </LinearLayout>
    </com.google.android.setupdesign.view.Illustration>
    <com.google.android.setupdesign.view.NavigationBar android:id="@+id/sud_layout_navigation_bar" android:layout_width="match_parent" android:layout_height="@dimen/sud_navbar_height" style="@style/SudNavBarTheme"/>
</LinearLayout>
