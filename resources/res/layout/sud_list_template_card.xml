            <FrameLayout android:background="?attr/sudCardBackground" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:elevation="@dimen/sud_card_elevation">
                <ListView android:id="@android:id/list" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <include layout="@layout/sud_progress_bar_stub"/>
            </FrameLayout>
        </LinearLayout>
