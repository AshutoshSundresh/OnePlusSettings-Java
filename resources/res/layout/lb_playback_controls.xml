<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ProgressBar android:id="@+id/playback_progress" android:layout_width="match_parent" android:layout_height="4dp" android:maxHeight="4dp" android:progressDrawable="@drawable/lb_playback_progress_bar" android:minHeight="4dp" android:layoutDirection="ltr" style="?android:attr/progressBarStyleHorizontal"/>
    <FrameLayout android:id="@+id/controls_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.leanback.widget.ControlBar android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/control_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr"/>
        <FrameLayout android:layout_gravity="end" android:id="@+id/more_actions_dock" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/current_time" android:paddingTop="@dimen/lb_playback_time_padding_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/lb_playback_current_time_margin_start" style="?attr/playbackControlsTimeStyle"/>
        <TextView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/total_time" android:paddingTop="@dimen/lb_playback_time_padding_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/lb_playback_total_time_margin_end" style="?attr/playbackControlsTimeStyle"/>
    </FrameLayout>
</LinearLayout>
