<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill" android:id="@+id/navigation_background" android:top="@dimen/op_control_divider_height_standard">
        <shape android:tint="?android:attr/windowBackground" android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item android:gravity="top|left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@+id/navigation_divider">
        <shape android:tint="?attr/onePlusDividerColor" android:shape="rectangle">
            <size android:height="@dimen/op_control_divider_height_standard"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>
